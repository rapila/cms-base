.ui-accordion
	.ui-accordion-content
		background-color #ffffff
		border none
		padding-top 0
		&.contents_container
			padding 0
		&.configuration_container
			padding 0
		table.ui-list tr.ui-list-headrow th,
		ul.ui-list li.ui-list-headrow
			background-color inherit
	.ui-accordion-header
		background none repeat scroll 0 0 #ebedef
		border-width 0 0 1px 0
		border-color #c1c2c4
		border-style solid
		border-radius 0px
		font-weight 1.5em
		margin 1px 0 0 0
		a
			border-bottom none
			font-size 1.2em
			font-weight 700
			color #666666
			padding 0.3em 0.3em 0.3em 0.2em
	.ui-accordion-header-icon
		margin-left 0.3em
		font-family 'Rapila-Icons', Arial
		color #999
		&::after
			content: '▶︎'
		&.ui-icon-triangle-1-s::after	
			transform rotate(90deg) scale(1, 1)
		&.ui-icon-triangle-1-e::after
			transform rotate(0deg) scale(1, 1)
	.ui-accordion-icons
		padding-left 0

.ui-icon.toggle_show_all,
.ui-accordion .ui-state-default .ui-icon-triangle-1-s
	&::after
		content '▶︎'
		transform rotate(90deg) scale(1, 1)

.ui-icon.toggle_show_all.closed,
.ui-accordion .ui-state-default .ui-icon-triangle-1-e
	&::after
		content '▶︎'
		transform rotate(0deg) scale(1, 1)

// style for count elements in accordion title
h3
	a
		background-image none
		span
			&.info,
			&.number
				font-weight normal
				&::before
					content ' ('
				&::after
					content ') '

