.ui-dialog
	background-color #000
	padding 0 !important

.ui-widget-content
	background none

div.ui-widget-content
	border 1px solid #999

#rapila_admin_menu,
.ui-dialog,
.filled-container.editing
	font-size 12px

.filled-container
	padding-bottom 19px
	border-radius 0 0 0 5px
	min-height 3em
	zoom 1
	margin-bottom 2px
	&.editing
		margin-bottom 20px
		position relative
		z-index 1000
		form
			padding 0.5em 1em
	/* clearfix */
	&:before,
	&:after
		content "\0020"
		display block
		height 0
		visibility hidden
	&:after
		clear left
	&.editing,
	&.editing:hover
		background #F9F9F9
	&:hover
		background-color rgba(167, 167, 167, 0.1)
		outline 1px solid #eee
		outline-radius 0 0 0 5px

.preview_bar
	display block
	position absolute
	z-index 1001
	.rapila-icon
		margin-right 1px
		margin-top 1px
		cursor not-allowed
		background-color #C1C1C1
		padding 0.1em 0.4em
		border-radius 0.2em
		margin-right 0.2em
	> div
		float left
		display none
	> div.is_not_shown
		display inline-block
	.rapila-icon.edit,
	&.editing .rapila-icon,
	&.editing .additional-buttons,
	&.loading .ui-loading
		display block
	&.editing .rapila-icon.edit,
	&.loading .rapila-icon.edit
		display none

	// add style for add_entry button, used in journal plugin, but could be used anywhere
	.add_entry_wrapper
		outline 1px solid #f2f2f2
		outline-radius 3px
		margin-bottom 1em
		button.add-entry.ui-widget
			font-size 12px
			margin 0
		ul.ui-menu
			.ui-menu-item
				background none
				font-size 11px
				padding 0
				a
					background none
	button.ui-state-hover
		background url('../../images/admin/button_gradient_dark.png') repeat scroll 0 0 transparent
		color #e3ef99 !important

#widget-notifications
	left 20px !important
	min-width 400px

#activity-indicator
	position fixed
	bottom 10px
	right 10px
	z-index 1002

.ui-loading
	background transparent url('../../images/preview/loader.gif') no-repeat scroll top left
	min-width 17px
	min-height 17px
