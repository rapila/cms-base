@import 'nib'

#admin_main.empty-dashboard
	background-image url('../../images/admin/configure-dashboard.svg')
	background-position bottom left
	background-repeat no-repeat
	padding 0.3em
	background-origin content-box

:lang(de) #admin_main.empty-dashboard
	background-image url('../../images/admin/configure-dashboard-de.svg')

#dashboard-columns
	img,
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul,
	ol
		border medium none
		list-style none outside none
		margin 0
		padding 0
	a
		color white

	/* Columns section */
	.dashboard-column-group
		clear left

	.dashboard-column
		float left
		width 100%
		/* Default to full-width */
		min-height 40px
		-moz-box-sizing border-box
		box-sizing border-box

	.dashboard-column.clear
		clear left

	.dashboard-widget-placeholder
		border 2px dashed #999

	.dashboard-widget,
	.dashboard-widget-placeholder
		margin 10px 10px 0 5px

	.dashboard-column:first-child .dashboard-widget,
	.dashboard-column:first-child .dashboard-widget-placeholder
		margin-left 10px

	.dashboard-column:last-child .dashboard-widget,
	.dashboard-column:last-child .dashboard-widget-placeholder
		margin-right 10px

	.dashboard-widget
		padding 2px
		box-shadow 0px 0px 7px 3px rgba(black, 0.3);
		border-radius 4px
		-moz-border-radius 4px
		-webkit-border-radius 4px
		&.editing
			.dashboard-widget-head
				cursor auto
		&.dragging
			height auto !important
			> *:not(.dashboard-widget-head)
				display none
		&.collapsed > *:not(.dashboard-widget-head)
			display none
		&.editing > .dashboard-edit-box
			display block

		.dashboard-widget-head
			color #000
			overflow hidden
			width 100%
			height 30px
			background-image none
			cursor move
			line-height 30px
			h3
				padding 0 5px
				float left
				color black
			> a
				display block
				background black
				color white
				border-radius 3px
				line-height 1.8em
				padding 0 6px
				margin 4px 3px
				cursor pointer
				&.edit,
				&.remove
					float right
				&.collapse
					float left
				&.active
					color (white - 40%)

		.dashboard-widget-content
			background-color #333
			padding 1em
			color #DDD
			-moz-border-radius-bottomleft 2px
			-moz-border-radius-bottomright 2px
			-webkit-border-bottom-left-radius 2px
			-webkit-border-bottom-right-radius 2px
			line-height 1.2em
			overflow-x hidden
			overflow-y auto
			max-height 400px

			h3,
			h4
				color #FFFFFF

			p,
			h4,
			h5,
			h6
				padding 0.4em 0

			p,
			li
				line-height 1.5em

			img
				float right
				margin 10px

			pre
				padding 0.5em 5px
				color #EEE
				font-size 12px

			*[data-widget-type=static_text] ul
				padding 5px 0 5px 20px
				list-style disc
				li, li:nth-child(2n)
					background-color transparent

			ul.images
				padding 7px 0 0 0
				list-style none
				height 1%

			ul.images li
				display inline
				float left

			ul.images img
				display inline
				float left
				margin 0 0 7px 7px

			table tr,
			table th,
			li
				background-color #444444
				color inherit

			table tr:nth-child(2n),
			li:nth-child(2n)
				background-color #555555

		.dashboard-edit-box
			overflow hidden
			background-color #333
			display none
			margin-bottom 2px
			padding 10px 0

			li.item
				padding 10px 0
				overflow hidden
				float left
				width 100%
				clear both

			label
				float left
				width 30%
				color #FFF
				padding 0 0 0 10px

			ul.colors li
				width 20px
				height 20px
				border 1px solid #EEE
				float left
				display inline
				margin 0 5px 0 0
				cursor pointer

	ul.ui-list li.ui-list-headrow,
	table.ui-list tr.ui-list-headrow th
		border-bottom none
		background-color inherit
		font-size .85em
