	cursor pointer

*[data-widget-type=tree].ui-widget-content
	.ui-icon
		background-image url("../../images/admin/icon_triangle_open_active.png")
		background-position 6px 6px

	.jstree-closed > .ui-icon
		background-image url("../../images/admin/icon_triangle_closed.png")
		background-position 6px 5px

	.jstree-closed > .ui-icon:hover
		background-image url("../../images/admin/icon_triangle_closed_active.png")
		background-position 6px 5px

.users fieldset.option_groups
	padding 0 0 0.6em 0

.ui-accordion .ui-accordion-content.contents_container	div.ui-widget-content,
.ui-accordion .ui-accordion-content.configuration_container	 div.ui-widget-content
	padding 0
	border-color #CCCDCF

