@import "admin"

@import "nib"

.ui-corner-all
	border-radius 3px;

.ui-selectable-helper
	z-index 4000 !important

.ui-notify
	margin-left auto
	margin-right auto
	width auto

	.ui-state-highlight
		background-image none

	&.search_info
		min-width 50em
		padding 0.5em
		vertical-align top

	ul
		margin 0
		padding 0

	.ui-state-error ul
		margin-left 0.5em
		list-style none

	li
		margin 0
		margin-left 1.3em
		padding:.2em 0

.ui-loading
	background transparent url("../../images/admin/loader.gif") no-repeat scroll top left
	min-width 24px
	min-height 24px

.ui-loading-add
	background transparent url("../../images/admin/loader_add_button.gif") no-repeat scroll top left
	min-width 24px
	min-height 24px

.ui-notify
	> div
		padding 0.3em
	.ui-icon
		float left
		margin-right 10px

.ui-icon-application
	background-position:-32px -96px
.ui-icon-audio
	background-position:-144px -160px
.ui-icon-text
	background-position -240px -128px

.ui-state-default,
#admin_sidebar .ui-state-default
	background transparent

.rapila_alert
	&.ui-dialog-content
		background-color #2D3238
		color #FFF
		padding-bottom 0px
	&.ui-dialog-content p
		font-size 1.1em
	&.ui-icon-alert
		display:block
		float left
	&.ui-dialog-content span.text
		display block
		margin-left 1.5em
	&.ui-dialog-content .ui-icon
		background-image url("../jquery-ui-theme/images/ui-icons_b8d600_256x240.png")

#admin_sidebar
	.ui-tree
		font-size 1.2em
		> ul > li
			> a
				padding-top 6px
		li .jstree-icon
			width 18px
	.ui-tree,
	.ui-list,
	.ui-list-row.ui-state-active,
	.ui-list-row.ui-state-hover
		font-weight 700

	.ui-tree li.ui-state-active li
		color #000

	.ui-state-droppable
		background-image none

	span.sidebar_input_save
		float right
		margin-top 2px
		display none
		height 16px
		width 16px

	span.sidebar_input_save.active
		display inline-block

form.page_detail
	background-color #EBEDEF
	margin 0
	padding 0
	vertical-align top

form.page_detail .status_section,
.pages #admin_main,
.ui-widget-content h3
	background-color #ebedef

form.page_detail
	.status_section
		border-top none
		border-bottom #C1C2C4 1px solid
		padding-bottom 0.5em
		padding-left 1.6em
		padding-top 1em
		padding-bottom 1em
		h3
			border-bottom none

.status_section h3
	font-size 12px
	background-color transparent
	border-bottom none
	margin-bottom 0.5em

form.page_detail h3 a,
.ui-dialog-content h3 a
	text-decoration none
	color #666

form.page_detail label.for_checkbox,
input[type=checkbox] + label.for_checkbox
	margin-right 2em
	padding-left:.2em
	display inline-block
	padding-right 0.5em

h3.status
	padding-left 0.3em

// List style for the content area (mostly table lists)
.ui-list
	.ui-list-row.ui-state-hover,
	.ui-list-row.ui-state-active
		background-image url('../../images/admin/selected_row.png')
		background-repeat repeat
		background-attachment scroll
		border 0

	tr.ui-list-row.ui-state-hover .ui-icon,
	tr.ui-list-row.ui-state-highlight .ui-icon
		background-image url("../jquery-ui-theme/images/ui-icons_000000_256x240.png");
#admin_sidebar .ui-list th:first-child
	padding-left:5px

//List style for the sidebar (mostly ul lists)
#admin_sidebar
	.ui-list
		.ui-list-row
			cursor pointer
			background-color transparent
			font-size 1.2em
			padding 3px 3px 3px 10px
			border-bottom 1px solid #DDD
			line-height 20px
			&.ui-state-hover,
			&.ui-state-active
				border none
				background-color sidebar_highlight_color
				background-image none
				border-bottom 1px solid border_color
				color #fff
			&.ui-state-highlight
				border none
				background-image none
				border-bottom 1px solid border_color

		.ui-list-row,
		.ui-list-row .ui-list-cell:first-child
			padding-left 5px

		.ui-state-active
			color white

		ol > li.ui-list-row.ui-state-hover
			border none

		li.ui-list-headrow span
			padding-left 5px

		th
			line-height 14px

// For the default page type
.page_detail
	.filled_modules ol.template-container li
		list-style none inside
		border-radius 3px
		padding 2px 6px
		border 1px solid #ccc
		margin 2px
		cursor move
		text-align left
		background #e3ef99 url("../../images/admin/filled_object_bg_gradient.png") repeat-x right bottom
	.filled_modules
		min-width 350px
		max-width 500px
		min-height 150px
		float:left
		background-color transparent
		font-size 4px
		position relative
		.add-new-item
			font-size 3em
			&.template-container-insert-language-object
				display inline-block
				margin-bottom 1px
				margin-right 1px
				font-size 2.5em
		&.css_parsed
			width 500px
		ol.template-container
			display block
			min-height 70px !important
			min-width 150px !important
			border 1px solid #eeeeee !important
			background-color #FFF
			border-color #DFDFDF
			&.template-container-_unused_objects
				border 1px dashed #dddddd !important
			li.ui-draggable-handle.ui-draggable-dragging
				width 80%
			li
				margin 3px
				padding 5px 6px
				min-height 15.6px
				min-width: 16px;
				height: 12px;
				display: flex
				align-items: center
				.rapila-icon
					cursor pointer
					font-size 1.2em
					margin-right 0.5em
				&.language_object_empty
					background #e3ef99 url("../../images/admin/filled_object_bg_gradient_empty.png") repeat-x right bottom

				.edit_condition_button
					opacity 0.5
				&.has_condition
					.edit_condition_button
						opacity 1
				.module_name
					flex-grow 1
					overflow hidden
					text-overflow ellipsis
					&[title]::after
						content " (" attr(title) ")"
						color rgba(black, 0.5)
				.draft_status
					display none
				&.is_draft .draft_status
					display inline
					text-transform uppercase
					margin-right -13px
					transform rotate(-40deg)
					color #AF1A15
					background-color rgba(255, 255, 255, 0.6)
					border-radius 2px
					border 1px solid #AF1A15
					float left
					font-size 0.6em
					font-weight bold
					padding 1px 2px 1px 3px
					position relative
					left -15px
					top -1px

		ol.template-container li,
		.template-container-description,
		.template-container-info
			white-space nowrap
			font-size 12px
		.template-container-description,
		.template-container-info
			color #666666
			margin 0
		.template-container-description
			margin-top 1em
			display inline-block
		.template-container-info
			margin-top 0.2em
			position absolute
			font-style italic
			padding-left 0.3em

.ui-image-picker-image
	.ui-icon.ui-icon-trash
		position absolute
		bottom 2px
		right 2px
.ui-icon-trash.delete_inactive
	background-image none


/* Interaction Cues addition
----------------------------------*/

#admin_sidebar .ui-state-droppable,
.image_browse_area.ui-state-droppable
	color #5b595b
	cursor pointer

.pointer
	cursor pointer

.image_browse_area.ui-state-droppable,
div.ui-state-droppable
	border 1px solid #ccc
	background-color #eff4cc
	cursor pointer
.ui-accordion-content.image_browse_area.ui-state-droppable
	border none

.image_browse_area.ui-state-droppable
	background-color #e3ef99

.ui-state-droppable a,
.ui-widget-content .ui-state-droppable a
	color #5b595b
	cursor pointer

.users fieldset.option_groups
	padding 0 0 0.6em 0

.ui-accordion .ui-accordion-content.contents_container	div.ui-widget-content,
.ui-accordion .ui-accordion-content.configuration_container div.ui-widget-content
	padding 0
	border-color #CCCDCF

.add_entry, .remove_entry
	height 24px
	width 24px
	margin-top 0.2em
	display inline-block
	cursor pointer

td span.remove_entry
	margin 0

.delete_entry
	margin-left 0.8em;
	display inline-block;
	cursor pointer

.error_display_indicator
	background-image url("../../images/admin/error_display_indicator_bg.png") !important
	background-repeat no-repeat !important
	background-position left top !important

.ui-menu
	padding 0
	font-size 13px
	border-radius 4px
	box-shadow 0px 0px 7px 3px rgba(black, 0.3)
	background-image linear-gradient(top, rgba(black, 0.15), rgba(black, 0.05))
	border none !important
	z-index 1001 !important
	li.ui-menu-item
		padding 0
		margin 0
		&:not(:last-child)
			border-bottom 1px dotted #999
		div.ui-menu-item-wrapper
			padding 4px 8px
			display block
			margin 0
			box-sizing border-box
			border none
			line-height 1.5
			border-radius 0
			&.ui-state-active
				background none
			&.ui-state-focus,
			&:hover
				cursor pointer
				border none
				color white
				background-color transparent
				background-image linear-gradient(top, rgba(black, 0.5), rgba(black, 0.3))
				&:not(:last-child)
					border-bottom 1px dotted white

.ui-progressbar
	margin-top 0.3em
	height 1.5em
	background-color #999

noscript
	text-align center
