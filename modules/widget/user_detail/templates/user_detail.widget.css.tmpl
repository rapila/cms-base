.no_entries_info {
	padding: .6em 0 .3em .4em;
}

.detail-widget-user_detail .status_section {
	width: 21em;
}

.ui-widget-content .ui-icon.suggest_password {
	display: inline-block;
	height: 21px;
	vertical-align: top;
	width: 21px;
	margin: 0 5px;
	background: url("{{writeDirectInclude=admin/suggest_password.png;template=location_only}}") no-repeat;
	cursor: pointer;
}

.ui-widget-content .ui-icon.suggest_password:hover {
	background: url("{{writeDirectInclude=admin/suggest_password_hover.png;template=location_only}}") no-repeat;
}

input[name="password_suggest"].ui-widget-content.select {
	background-color: #f2f2f2;
}
.user_groups_section, .roles_section {
	float: left;
	width: 275px;
	min-height: 30px;
	height: 100%;
}
.roles_section {
	margin-left: -1px;
}

.user_groups_section fieldset, .roles_section fieldset {
	margin: 0
}

.roles_section label,
.user_groups_section label {
	display: inline-block;
	padding-right: 0.5em;
}

