.tag {
	white-space: nowrap;
	line-height: 10px;
}

.tag > * {
	height: 22px;
	display: inline-block;
	background-repeat: no-repeat;
	padding-top: 10px;
}

.tag_area .no_tags_message {
	color: #f9f9f9;
	padding: 0.6em 0.4em;
}

.tag_area.has_tags > .no_tags_message {
	display: none;
}

.tag > .tag_start {
	background-image: url("{{writeDirectInclude=admin/tag_start.png;template=location_only}}");
	width: 16px;
}

.tag > .tag_repeat {
	background-image: url("{{writeDirectInclude=admin/tag_repeat.png;template=location_only}}");
	background-repeat: repeat-x;
	padding-left: 1px;
	padding-right: 1px;
}

.tag > .tag_end {
	background-image: url("{{writeDirectInclude=admin/tag_end.png;template=location_only}}");
	padding-left: 1px;
	width: 12px;
}

.tag > .tag_end.deletable {
	cursor: pointer;
	color: #e3ef99;
	padding-left: 2px;
}
