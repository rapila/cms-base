.tag_panel {
	position: absolute;
	background-color: white;
	width: 300px;
	min-height: 200px;
	z-index: 20;
}

.close_panel {
	display: block;
	cursor: pointer;
	float: left;
	color: #fff;
	margin: 5px;
}

.tag_panel.ui-widget-content {
	border: 1px solid #111;
	border-right: 1px solid transparent;
	background-color: #888;
}

.tag_panel .admin_area {
	position: absolute;
	bottom: 0px;
}

.tag_panel .admin_area input {
	float: left;
	margin: -1px 5px 0.8em 0.8em;
	width: 190px;
}

.tag_panel .admin_area button.ui-state-hover {
	color: #e3ef99;
}

.tag_panel .tag_area {
	margin: 0.6em;
	/* for lots of tags, should be improved to fixed bottom space */
	height: 85%;
	overflow-y: scroll;
}
    