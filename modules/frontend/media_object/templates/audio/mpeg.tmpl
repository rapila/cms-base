<object type="application/x-shockwave-flash" data="{{writeDirectInclude=mediaplayer.swf;type=media;template=location_only}}" width="300" height="20">
	<param name="allowScriptAccess" value="always" />
	<param name="movie" value="{{writeDirectInclude=mediaplayer.swf;type=media;template=location_only}}" />
	<param name="quality" value="high" />
	<param name="scaleMode" value="showAll" />
	<param name="allowfullscreen" value="true" />
	<param name="wmode" value="transparent" />
	<param name="allowNetworking" value="all" />
	<param name="flashvars" value="file={{src}}&amp;type=mp3" />
	<audio controls="controls" width="{{width}}" height="{{height}}">
		<source src="{{src}}"	 type="{{mimeType}}" />
	</audio>
</object>
